# PrivacyAI Inference Server - Akash Deployment Configuration
# Copy this file to .env and customize for your deployment

# ===== PROVIDER IDENTITY =====
PROVIDER_ID=akash-provider-1
PROVIDER_NAME=Akash AI Provider

# ===== WAKU CONFIGURATION =====
WAKU_REQUEST_TOPIC=/marketplace/v1/providers/akash-provider-1/requests
WAKU_RESPONSE_TOPIC=/marketplace/v1/providers/akash-provider-1/responses

# ===== AI MODEL CONFIGURATION =====
AI_PROVIDER=local
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:8b
USE_OLLAMA=true

# ===== SERVICE CONFIGURATION =====
LOG_LEVEL=info
NODE_ENV=production

# ===== MARKETPLACE CONFIGURATION =====
# Enable marketplace features (for future phases)
MARKETPLACE_MODE=true
ENABLE_ENCRYPTION=false
ENABLE_PAYMENTS=false

# ===== RESOURCE CONFIGURATION =====
# These are used for monitoring and self-reporting
MAX_CONCURRENT_REQUESTS=10
AVERAGE_RESPONSE_TIME=2000

# ===== DISCOVERY CONFIGURATION =====
# How often to announce availability (milliseconds)
ANNOUNCEMENT_INTERVAL=30000

# Provider capabilities and pricing (for future marketplace features)
SUPPORTED_MODELS=deepseek-r1:8b,llama2:7b
PRICING_PER_TOKEN=0.001
QUALITY_TIER=standard 